{
  "flintVersion": "0.1",
  "name": "water_source_block",
  "description": "Verify that a water source block can be placed and detected",
  "tags": ["water"],
  "dependencies": ["basic_block_placement"],
  "setup": {
    "cleanup": {
      "region": [[15, 95, 15], [30, 105, 30]]
    }
  },
  "timeline": [
    {
      "at": 0,
      "do": "fill",
      "region": [[20, 100, 20], [25, 100, 25]],
      "with": "minecraft:glass"
    },
    {
      "at": 1,
      "do": "place",
      "pos": [22, 101, 22],
      "block": "minecraft:water"
    },
    {
      "at": 3,
      "do": "assert",
      "checks": [
        {"pos": [22, 101, 22], "is": "minecraft:water"}
      ]
    },
    {
      "at": 3,
      "do": "assert_state",
      "pos": [22, 101, 22],
      "state": "level",
      "values": ["0"]
    }
  ]
}
